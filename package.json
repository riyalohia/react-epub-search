{
  "name": "react-epub-search",
  "version": "1.0.1",
  "description": "An epub-reader for React integrated with search powered by ePubJS",
  "main": "lib/index.js",
  "devDependencies": {
    "@babel/cli": "^7.17.3",
    "@babel/core": "^7.17.4",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.21.5",
    "@types/node": "^16.18.25",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "styled-components": "^5.3.10",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "dependencies": {
    "epubjs": "^0.3.92"
  },
  "peerDependencies": {
    "react": ">=18.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/riyalohia/react-epub-search.git"
  },
  "author": "Riya Lohia",
  "scripts": {
    "compile": "NODE_ENV=production babel --out-dir lib src/library --extensions '.ts,.tsx'",
    "prepare": "npm run compile",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "react",
    "epub",
    "epubJS",
    "react reader"
  ],
  "types": "types/index.d.ts"
}
